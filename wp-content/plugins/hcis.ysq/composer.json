{
  "name": "hcisysq/plugin",
  "description": "HCIS YSQ - Sistem Login NIP, Dashboard Pegawai, Form Pelatihan dengan Google Sheets Integration",
  "version": "1.5",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "samijaya",
      "email": "admin@hcis.local"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.1",

    "google/apiclient": "^2.18",
    "monolog/monolog": "^2.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "HCISYSQ\\": "includes/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}